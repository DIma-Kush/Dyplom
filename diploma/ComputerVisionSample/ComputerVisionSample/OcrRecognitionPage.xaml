<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComputerVisionSample.OcrRecognitionPage">

  <StackLayout Orientation="Vertical" >
    
    <Button x:Name="TakePictureButton" Clicked="TakePictureButton_Clicked"
          Text="Take from camera"/>
    <Button x:Name="UploadPictureButton" Clicked="UploadPictureButton_Clicked"
        Text="Pick a photo"/>
    <ActivityIndicator x:Name="Indicator1" IsVisible="False" IsRunning="False" />
    <Image x:Name="Image1" HeightRequest="240" />

    <StackLayout Orientation="Horizontal" x:Name="GettedLanguage">
      <Label Font="17" Text="Language(detected automatically): "/>
      <Label Font="17" Text="{Binding Language}"/>
    </StackLayout>

    <ScrollView HeightRequest="125" >
      <StackLayout x:Name="DetectedText"/>
    </ScrollView>
      <StackLayout>
        <Picker x:Name="DestinationLangPicker" Title="Destination language"
               SelectedIndexChanged="picker_language_choose"
                HorizontalOptions="CenterAndExpand" >
          <Picker.Items HorizontalOptions="CenterAndExpand" >
            <x:String >Destination language</x:String>
            <x:String >English</x:String>
            <x:String >Russian</x:String>
            <x:String >Ukrainian</x:String>
            <x:String >German</x:String>
            <x:String >French</x:String>
            <x:String >Polish</x:String>
            <x:String >Spanish</x:String>
            <x:String>Italian</x:String>
          </Picker.Items>
        </Picker>
        <ScrollView >
          <StackLayout Orientation="Horizontal" >
            <Label  x:Name="translatedText"  Text="" VerticalOptions="CenterAndExpand"  HorizontalOptions="Center" Font="17" LineBreakMode="WordWrap"/>
          </StackLayout>
        </ScrollView>
      </StackLayout>



    </StackLayout>
</ContentPage>
