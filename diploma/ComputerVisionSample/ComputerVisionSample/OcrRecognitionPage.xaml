<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComputerVisionSample.OcrRecognitionPage">
  
  <RelativeLayout>
    <Image x:Name="backgroundImage" Source="Jupiter.png" Opacity="0.3"
               RelativeLayout.WidthConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Width}"
                RelativeLayout.HeightConstraint=
                  "{ConstraintExpression Type=RelativeToParent, Property=Height}" />
    <Grid RelativeLayout.WidthConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Width}"
            RelativeLayout.HeightConstraint=
              "{ConstraintExpression Type=RelativeToParent, Property=Height}">
 <StackLayout Orientation="Vertical" 
              VerticalOptions="Center"
               HorizontalOptions="Center"
              Margin="40, 5">
    <Button x:Name="TakePictureButton" 
            Clicked="TakePictureButton_Clicked" 
            BackgroundColor="#5C91C7" 
            TextColor="Black"
             Text="Take from camera"
            Margin="40, 10"/>
    <Button x:Name="UploadPictureButton" 
            Clicked="UploadPictureButton_Clicked" 
            BackgroundColor="#5C91C7" 
            Text="Pick a photo"
            TextColor="Black"
             Margin="40, 10"/>
   <ActivityIndicator 
      x:Name="Indicator1" 
   IsVisible="False" 
   IsRunning="False" />
    <Image 
      x:Name="Image1"
      HeightRequest="240"
      />

    <StackLayout
      
      Orientation="Horizontal" 
      x:Name="GettedLanguage"
      HorizontalOptions="CenterAndExpand">
      <Label Font="17" Text="Language: "/>
      <Label Font="17"  TextColor="Black" Text="{Binding Language}"/>
    </StackLayout>

    <ScrollView 
      HeightRequest="125" >
      <StackLayout 
        x:Name="DetectedText"
         HorizontalOptions="CenterAndExpand"
         />
    </ScrollView>
      <StackLayout>
        <Picker x:Name="DestinationLangPicker" 
                Title="Destination language"
               SelectedIndexChanged="picker_language_choose"
                HorizontalOptions="CenterAndExpand">
          <Picker.Items  >
            <x:String >Destination language</x:String>
            <x:String >English</x:String>
            <x:String >Russian</x:String>
            <x:String >Ukrainian</x:String>
            <x:String >German</x:String>
            <x:String >French</x:String>
            <x:String >Polish</x:String>
            <x:String >Spanish</x:String>
            <x:String>Italian</x:String>
          </Picker.Items>
        </Picker>
        <ScrollView>
          <StackLayout Orientation="Horizontal"
                       HorizontalOptions="CenterAndExpand"
                        Margin="20,10">
           <ScrollView 
            HeightRequest="125"
            WidthRequest="300">
           <StackLayout 
             x:Name="TranslatedText"
           HorizontalOptions="CenterAndExpand"/>
          </ScrollView>
          </StackLayout>
        </ScrollView>
      </StackLayout>

    </StackLayout>
    </Grid>
      </RelativeLayout>
</ContentPage>
